# This file contains the code in "Kvlang" for the "thesis_scanner_gui.py"
# It contains the code for the interface design
# By Alexander Bayerlein

<ScreenManager>:
    FirstScreen:
        name: "first"
    SecondScreen:
        name: "second"
    ThirdScreen:
        name: "third"
    FourthScreen:
        name: "fourth"
    FifthScreen:
        name: "fifth"

<Label>:
    font_size: 35

<Button>:
    font_size: 35
    size_hint: (.25, .15)
    pos_hint: {"center_x": 0.5, "y": 0.02}

<LeftSideButton>:
    pos_hint: {"center_x": 0.25, "y": 0.02}

<RightSideButton>:
    pos_hint: {"center_x": 0.75, "y": 0.02}


# start screen
<FirstScreen>:
    name: "first"

    FloatLayout:
        Label:
            text: "1. Insert your thesis in the scanner\n\nPlease make sure the cover page is facing up\n\n2. press \"START\""
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.75}

        Image:
            source: root.source
            keep_data: True
            size_hint: 0.4, 0.4
            pos_hint: {"center_x": 0.5, "top": 0.6}
        Button:
            text: "START"
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "left"


# camera screen / by Daniel Rindin
<SecondScreen>:
    name: "second"

    FloatLayout:

        Camera:
            id: cam
            play: True
            resolution: {1080, 720}
            pos_hint: {'center_x': .5, 'y': .1}
            canvas.before:
                PushMatrix
                Rotate:
                    angle: -90
                    origin: self.center
            canvas.after:
                PopMatrix

        LeftSideButton:
            text: "Cancel"
            on_release:
                app.root.current = "first"
                root.manager.transition.direction = "right"

        RightSideButton:
            text: "Take Photo"
            on_release:
                root.take_photo()
                app.root.current = "third"
                root.manager.transition.direction = "left"


# shows the image taken on screen two
<ThirdScreen>:
    name: "third"

    FloatLayout:
        Image:
            id: image
            source: root.source
            size_hint: 1, 0.9
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        LeftSideButton:
            text: "Try Again"
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "right"

        RightSideButton:
            text: "Next Step"
            on_release:
                app.root.current = "fourth"
                root.manager.transition.direction = "left"


# loadingscreen
<FourthScreen>:
    name: "fourth"

    FloatLayout:
        Label:
            id: animation_label
            text: "Analyzing the name of your Thesis"


# screen for the analyzed data
<FifthScreen>:
    name: "fifth"

    FloatLayout:
        Label:
            id: a_name

        LeftSideButton:
            text: "Try Again"
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "right"

        RightSideButton:
            text: "Save"
            on_release:
                app.root.current = "first"
                root.manager.transition.direction = "left"
